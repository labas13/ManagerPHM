<Window x:Class="ManagerPHM.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ManagerPHM"
        mc:Ignorable="d"
        Title="Manažer PHM" WindowState="Maximized" >
    <!--Hlavní mříž(3 řádky a bez sloupcu)-->
    <Grid Background="Aqua">
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="25"/>
        </Grid.RowDefinitions>
        <!--hlavni panel nabidek (Menu bar)-->
        <Menu x:Name="hlavniMenu" Background="#FFF0F0F0" VerticalAlignment="Center" FontSize="18">
            <MenuItem Name="menuEvidence" Header="_Evidence" HorizontalAlignment="Center" />
            <MenuItem Name="menuPHM" Header="_PHM" />
            <MenuItem Name="menuTechnika" Header="_Technika" >
                
            </MenuItem>
            <MenuItem Name="menuNapoveda" Header="_Nápověda" >
                
            </MenuItem>
        </Menu>
        <DockPanel Name="dockPanelSpodniLista" Background="#FFF0F0F0" Grid.Row="2">
            
        </DockPanel>

    </Grid>
</Window>
